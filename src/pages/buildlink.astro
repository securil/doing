<script>
  // 애니메이션 직접 초기화
  import { initAllAnimations, initHoverEffects } from '../scripts/animations.js';
  
  // 페이지 로드 시 애니메이션 초기화
  document.addEventListener('DOMContentLoaded', () => {
    console.log("BuildLink 페이지 애니메이션 초기화");
    initAllAnimations();
    
    // 호버 효과가 있는 요소들에 직접 스타일 적용
    const applyHoverStyles = () => {
      console.log("BuildLink 페이지 호버 스타일 직접 적용");
      
      // 요금제 카드에 호버 효과 직접 적용
      const pricingCards = document.querySelectorAll('.bg-white.rounded-xl');
      pricingCards.forEach(card => {
        card.style.transition = 'all 0.3s ease';
        
        card.addEventListener('mouseenter', () => {
          card.style.transform = 'translateY(-10px)';
          card.style.boxShadow = '0 15px 30px rgba(0, 0, 0, 0.1)';
        });
        
        card.addEventListener('mouseleave', () => {
          card.style.transform = '';
          card.style.boxShadow = '';
        });
      });
      
      // CTA 버튼에 호버 효과 적용
      const ctaButtons = document.querySelectorAll('.text-accent.border-2');
      ctaButtons.forEach(btn => {
        btn.style.transition = 'all 0.3s ease';
        
        btn.addEventListener('mouseenter', () => {
          btn.style.backgroundColor = '#4ca5d0';
          btn.style.color = 'white';
        });
        
        btn.addEventListener('mouseleave', () => {
          btn.style.backgroundColor = '';
          btn.style.color = '';
        });
      });
    };
    
    // 즉시 호버 효과 적용
    applyHoverStyles();
    
    // 0.5초 후 한 번 더 적용
    setTimeout(applyHoverStyles, 500);
  });
  
  // 페이지가 완전히 로드된 후에도 실행
  window.addEventListener('load', () => {
    console.log("BuildLink 페이지 완전 로드 후 애니메이션 재초기화");
    initAllAnimations();
    initHoverEffects();
  });
</script>
