<script>
  // FAQ 아코디언 기능
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.faq-question');
    
    faqItems.forEach(item => {
      item.addEventListener('click', () => {
        const answer = item.nextElementSibling;
        const icon = item.querySelector('i');
        
        // 현재 활성화된 FAQ 닫기
        const activeItems = document.querySelectorAll('.faq-answer[style*="max-height"]');
        const activeIcons = document.querySelectorAll('.faq-question i.fa-chevron-up');
        
        activeItems.forEach(activeItem => {
          if (activeItem !== answer) {
            activeItem.style.maxHeight = null;
          }
        });
        
        activeIcons.forEach(activeIcon => {
          if (activeIcon !== icon) {
            activeIcon.classList.replace('fa-chevron-up', 'fa-chevron-down');
          }
        });
        
        // 토글 애니메이션
        if (answer.style.maxHeight) {
          answer.style.maxHeight = null;
          icon.classList.replace('fa-chevron-up', 'fa-chevron-down');
        } else {
          answer.style.maxHeight = answer.scrollHeight + 'px';
          icon.classList.replace('fa-chevron-down', 'fa-chevron-up');
        }
      });
    });
    
    // 카테고리 및 서비스 카드 호버 효과 강화
    const categoryCards = document.querySelectorAll('.category-card');
    categoryCards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        const icon = card.querySelector('.category-icon');
        if (icon) {
          icon.classList.add('animate-pulse');
        }
      });
      
      card.addEventListener('mouseleave', () => {
        const icon = card.querySelector('.category-icon');
        if (icon) {
          icon.classList.remove('animate-pulse');
        }
      });
    });
    
    // 서비스 이미지 호버 효과
    const serviceImages = document.querySelectorAll('.service-image');
    serviceImages.forEach(imgContainer => {
      imgContainer.addEventListener('mouseenter', () => {
        const img = imgContainer.querySelector('img');
        if (img) {
          img.style.transform = 'scale(1.05)';
        }
      });
      
      imgContainer.addEventListener('mouseleave', () => {
        const img = imgContainer.querySelector('img');
        if (img) {
          img.style.transform = 'scale(1)';
        }
      });
    });
    
    // 검색 바 포커스 효과
    const searchInput = document.querySelector('.search-bar input');
    if (searchInput) {
      searchInput.addEventListener('focus', () => {
        const searchBar = document.querySelector('.search-bar');
        searchBar.classList.add('ring-2', 'ring-accent', 'ring-opacity-50');
      });
      
      searchInput.addEventListener('blur', () => {
        const searchBar = document.querySelector('.search-bar');
        searchBar.classList.remove('ring-2', 'ring-accent', 'ring-opacity-50');
      });
    }
  });
