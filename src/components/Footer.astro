    .footer-top {
      flex-direction: column;
      align-items: center;
    }
    
    .footer-nav {
      margin-top: 20px;
    }
    
    .footer-bottom {
      flex-direction: column;
    }
    
    .social-links {
      margin-top: 20px;
    }
  }
</style>
